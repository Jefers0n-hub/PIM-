#include <stdio.h>
#include <locale.h>
#define TAMANHO 10
#include <stdlib.h>

// variáveis globais, pois foram declaradas fora das funções 
FILE* arquivo;
int opcao = 0;

void MostrarMenu()
{
	printf("(1) - Menu Cliente\n");
	printf("(2) - Menu Corretor\n");
	printf("(3) - Menu Imoveis\n");
	printf("(4) - Menu Calculo\n");
	printf("(5) - Sair\n");
	printf("Entre com a opção desejada: ");
	scanf("%i", &opcao);
	system("cls");
	getchar(); // limpar o <enter> do scanf anterior
}

void MenuCliente()
{
	printf("(1) - Cadastro Cliente\n");
	printf("(2) - Alteracao de cadastro\n");
	printf("(3) - Exclusao de Cadastro\n");
	printf("(4) - Visualizacao de Cadastro\n");
	printf("(0) - Voltar\n");
	printf("Entre com a opção desejada: ");
	scanf("%i", &opcao);
	getchar(); // limpar o <enter> do scanf anterior
}
void MenuCorretor()
{
	printf("(1) - Nome\n");
	printf("(2) - Cod Corretor\n");
	printf("(3) - Comissao atual\n");
	printf("(0) - Voltar\n");
	printf("Entre com a opção desejada: ");
	scanf("%i", &opcao);
	getchar(); // limpar o <enter> do scanf anterior
}
void MenuImoveis()
{
	printf("(1) - Cadastro Imovel\n");
	printf("(2) - Alteracao de cadastro\n");
	printf("(3) - Exclusao de Cadastro\n");
	printf("(4) - Visualizacao de Cadastro\n");
	printf("(0) - Voltar\n");
	printf("Entre com a opção desejada: ");
	scanf("%i", &opcao);
	getchar(); // limpar o <enter> do scanf anterior
}
void MenuCalculo()
{
	printf("(1) - Comissao por venda\n");
	printf("(2) - Comissao por locacao\n");
	printf("(3) - Simulacao de financiamento\n");
	printf("(0) - Voltar\n");
	printf("Entre com a opção desejada: ");
	scanf("%i", &opcao);
	getchar(); // limpar o <enter> do scanf anterior
}
int main()
{
	
	setlocale(LC_ALL,"Portuguese");
		
	while(opcao!=5)
	{

		MostrarMenu();
		
		switch(opcao)
		{
			case 1: // listar Menu Cliente
				MenuCliente();
				break;
			case 2: // listar Menu Corretor
				MenuCorretor();
				break;
			case 3: // listar Menu Imoveis
				MenuImoveis();
				break;
			case 4: // listar Menu Calculo
				MenuCalculo();
				break;
			case 5: // Sair
				break;
			
			default:
				printf("Opção inválida!");
				break;
		}
		printf("\n\nClique uma tecla para continuar.\n\n");
		getch();
		system("cls");
	} // fim do while

}
